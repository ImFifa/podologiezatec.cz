{block #content}
	<header class="container">
		<div class="content">
			<h1>Dopřejte svým nohám péči, kterou si zaslouží</h1>
			<div class="cta-btns">
				<span class="before"></span>
				<a n:href="Reservation:" class="btn btn-primary btn-lg">Online rezervace</a>
				<a n:href="Homepage:#nase-sluzby" class="btn btn-light btn-lg">Naše služby</a>
				<span class="after"></span>
			</div>
		</div>
		<img src="{$basePath}/dist/img/header.jpg" alt="Header image">
		<div class="scroll-down"></div>
	</header>

	<section class="services container" id="nase-sluzby">
		<img src="{$basePath}/dist/img/services.jpg" alt="Services image">
		<div class="content">
			<h2>Naše služby</h2>
			<ul n:ifset="$services">
				{foreach $services as $service}
					<li><a n:href="Service:show $service->slug">{$service->name}</a></li>
				{/foreach}
			</ul>
		</div>
	</section>

	<section class="pricing" id="cenik">
		<div class="container">
			<div class="content">
				<h2>Ceník</h2>
				{box cenik}
			</div>
			<img src="{$basePath}/dist/img/pricing.jpg" alt="Pricing image">
		</div>
		<div class="bg"></div>
	</section>

	<section class="news container" id="aktuality">
		<h2>Aktuality</h2>
		<div n:ifset="$news" class="news-grid">
			{foreach $news as $new}
				<a n:href="New:show $new->slug" class="new">
					{if $new->cover != NULL}
						<img src="{$basePath}/upload/news/{$new->id}/{$new->cover}" alt="{$new->title}">
					{else}
						<img src="{$basePath}/dist/img/nocover.jpeg" alt="{$new->title}">
					{/if}
					<h4>{$new->title}</h4>
					<span class="date">{$new->created|date:'d. m. Y'}</span>
				</a>
			{/foreach}

			<a n:href="New:default" class="next-new">
				<svg viewBox="0 0 39 25" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M-3.77207e-07 12.5C-3.88321e-07 12.1317 0.146308 11.7785 0.406739 11.518C0.667169 11.2576 1.02039 11.1113 1.38869 11.1113L34.1424 11.1113L25.402 2.37364C25.1412 2.11288 24.9947 1.75922 24.9947 1.39045C24.9947 1.02168 25.1412 0.668011 25.402 0.40725C25.6627 0.14649 26.0164 -1.64728e-06 26.3852 -1.67063e-06C26.754 -1.69398e-06 27.1076 0.14649 27.3684 0.40725L38.4779 11.5168C38.6073 11.6458 38.7099 11.799 38.7799 11.9678C38.8499 12.1365 38.8859 12.3173 38.8859 12.5C38.8859 12.6827 38.8499 12.8635 38.7799 13.0322C38.7099 13.201 38.6073 13.3542 38.4779 13.4832L27.3684 24.5927C27.1076 24.8535 26.754 25 26.3852 25C26.0164 25 25.6628 24.8535 25.402 24.5927C25.1412 24.332 24.9947 23.9783 24.9947 23.6096C24.9947 23.2408 25.1412 22.8871 25.402 22.6264L34.1424 13.8887L1.38869 13.8887C1.02039 13.8887 0.667169 13.7424 0.406739 13.482C0.146308 13.2215 -3.66092e-07 12.8683 -3.77207e-07 12.5Z"/>
				</svg>
			</a>
		</div>
	</section>

	<section class="contact container" id="kontakt">
		<h2>Kontakt</h2>
		<div class="contact-grid">
			<div class="contact-info">
				<ul>
					<li>
