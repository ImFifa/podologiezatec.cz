					<li>
						<svg width="44" height="44" viewBox="0 0 44 44" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M22 42C33.046 42 42 33.046 42 22C42 10.954 33.046 2 22 2C10.954 2 2 10.954 2 22C2 33.046 10.954 42 22 42Z" stroke="black" stroke-width="4" stroke-linejoin="round" fill="white"/>
							<path d="M22.0078 10V22.009L30.4868 30.489" stroke="black" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						<div class="opening">
							{box oteviraci_doba}
						</div>
					</li>
				</ul>
			</div>
			<div class="contact-form">
				<h3>Napište nám</h3>

				{foreach $flashes as $flash}
					<div class="alert alert-{$flash->type} alert-dismissible fade show" style="max-width: 500px" role="alert">
						{$flash->message}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{/foreach}

				{form contactForm, class => 'row'}
					<div class="col-lg-12">
						<div class="form-group">
							{label name}{/label}
								{input name class => 'form-control, required'}
						</div>
					</div>

					<div class="col-lg-6">
						<div class="form-group">
							{label phone}{/label}
								{input phone class => 'form-control, required'}
						</div>
					</div>

					<div class="col-lg-6">
						<div class="form-group">
							{label email}{/label}
								{input email class => 'form-control, required'}
						</div>
					</div>

					<div class="col-lg-12">
						<div class="form-group">
							{label message}{/label}
								{input message class => 'form-control, required', rows => 5}
						</div>
					</div>

					<div class="col-lg-6">
						<div class="form-group">
							<button n:name="submit" class="btn btn-lg btn-primary submit">
								Odeslat
							</button>
						</div>
					</div>
				{/form}
			</div>
		</div>
	</section>
{/block}
